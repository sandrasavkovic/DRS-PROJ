{
  "services": [
    {
      "name": "frontend",
      "docker": {
        "dockerfilePath": "./client/Dockerfile"
      },
      "startCommand": "npm start"
    },
    {
      "name": "backend",
      "docker": {
        "dockerfilePath": "./flask-server/Dockerfile"
      },
      "startCommand": "python server.py"
    },
    {
      "name": "db",
      "docker": {
        "image": "mysql:8"
      },
      "environment": {
        "MYSQL_ROOT_PASSWORD": "duska",
        "MYSQL_DATABASE": "discussion_app"
      }
    }
  ]
}
